#!/usr/bin/env python
# -*- coding: utf-8 -*-

from empire_agent import EmpireAgent
from empire_agent import Config
import os

config = Config('/etc/empire-agent.json')
pid_file = config.pid_file # get pid file path
empire = EmpireAgent(pid_file)

# empire.run(config)

if os.path.isfile(pid_file):
    empire.stop()
else:
    empire.start(config)
